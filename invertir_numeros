#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main()
{int N,Z=0,r,c;
 do
 {cout <<"Ingrese un numero con mas de 3 digitos: " << endl;
  cin >>N;
 }while(N<100);
while(N>0)
{r=N%10;
 Z=Z*10+r;
 c=N/10;
 N=c;
}
cout <<"El numero invertido es:" <<endl << Z;
_getch();
}
