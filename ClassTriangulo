void main ()
{Triangulo triangulo1;
 float a,b;
 cout <<"Ingrese su base: "<<endl;
 cin>>a;
 cout<<"Ingrese su altura: "<<endl;
 cin>>b;
 cout<<"El area es: "<<triangulo1.calcular_area(a,b);
